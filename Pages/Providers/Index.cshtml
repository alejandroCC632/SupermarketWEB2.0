@page
@model SupermarketWEB.Pages.Providers.IndexModel
@{
    ViewData["Title"] = "Index Providers";
}

<h1>Index Providers</h1>
<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].Document_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].Phone_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].Email)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Providers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Document_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.First_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>